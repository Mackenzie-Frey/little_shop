<h1>Shopping Cart</h1>
<% unless @cart.empty? %>
  <% @cart.current_items.each do |item| %>
    <div class='item-<%= item.id %>'>
      <h2><%= item.name %></h2>
      <%= image_tag item.image, alt: item.name %>
      <h4>Sold by: <%= link_to "#{item.user.name}", merchants_path(item.user) %></h4>
      <h4>Qty <%= @cart.qty(item) %> at $<%= item.price %> ea. Subtotal: $<%= item.price * @cart.qty(item) %></h4>
    </div>
  <% end %>
  <h2>Total: $<%= @cart.total_cost %></h2>
  <h4><%= link_to "Empty cart", cart_path, method: :delete %></h4>
<% else %>
  <h2>Cart is empty</h2>
<% end %>
